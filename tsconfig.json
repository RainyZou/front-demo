{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [ "es2015", "dom" ],
    "noStrictGenericChecks": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node",
      "core-js",
      "js-base64"
    ]
  },
  "include": [ "src/**/*" ],
  "exclude": [ "node_modules" ]
}
